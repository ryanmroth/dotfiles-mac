#  ---------------------------------------------------------------------------
#  Description: Sensible defaults for curl.
#  Note:        To be placed in the $HOME directory.
#  ---------------------------------------------------------------------------
#  Sections:
#  1.  User Agent
#  2.  Redirects
#  3.  Timeouts
#  ---------------------------------------------------------------------------

#  --------------------------------------------------
#   1.  User Agent
#  --------------------------------------------------

    # Disguise as Edge on Windows
    user_agent = "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/119.0.0.0 Safari/537.3"

#  --------------------------------------------------
#   2.  Redirects
#  --------------------------------------------------
  
    # When following a redirect, automatically set the previous URL as referer.
    referer = ";auto"

#  --------------------------------------------------
#   3.  Timeouts
#  --------------------------------------------------

    # Wait 60 seconds before timing out.
    connect-timeout = 60